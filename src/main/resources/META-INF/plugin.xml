<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.nickawrist.MinecraftDevServer</id>

    <name>MinecraftDevServer</name>

    <vendor url="https://www.nicholas-aristizabal.com">Nicholas Aristizabal</vendor>

    <description><![CDATA[
    Allows Minecraft plugin developers to spin up a lightweight Minecraft server inside their IDE for testing and debugging purposes.
  ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Extension points defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.nickawrist.minecraftdevserver.ServerRepository"/>
        <toolWindow factoryClass="com.nickawrist.minecraftdevserver.window.DevServerToolWindowFactory" id="DevServerToolWindow" anchor="right" icon="/icons/cube-svg.svg"/>
    </extensions>

    <actions>
        <group id="MinecraftDevServer.MoveToDevServerGroup"
               class="com.nickawrist.minecraftdevserver.actions.MoveToDevServerGroup"
               text="Move to Dev Server"
               description="Move the selected JAR to a Minecraft dev server plugins folder"
               popup="true">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>
        </group>
    </actions>
    <resource-bundle>templates.server</resource-bundle>

</idea-plugin>